source 'https://rubygems.org'

gem 'rails'

# If it works with SQLite3...
gem 'sqlite3'
# ...then it's hard to imagine what it WON'T work with
# ...except NoSQLs?

# Data conveniences
gem 'state_machine'

#### Frontend ####

gem 'slim'

gem 'sass-rails'

gem 'uglifier'
gem 'coffee-rails'

gem 'jquery-rails'
gem 'bootstrap-sass'

# Authentication #
gem 'devise'

##### Server #####
gem 'puma'

group :development do
  # Email delivered straight to browser
  gem 'letter_opener'
end

group :development, :test do
  # Better REPL
  gem 'pry-rails'
  gem 'pry-coolline'
  gem 'pry-doc'
  gem 'pry-byebug'

  # Better error pages
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'web-console'
end
